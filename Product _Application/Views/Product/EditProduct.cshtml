@using Product__Application.Context.DbContext;
@using Product__Application.ViewModel;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@inject DataBaseContext _context
@model EditProductViewModel

@{
    var categories = _context.categories.ToList();
    SelectList categoriesItem = new SelectList(categories, "Id", "Name");
}
<form asp-action="SaveEdit" asp-controller="Product" asp-route-productId=@Model.Id method="post" enctype="multipart/form-data">
    <div class="form-container">
        <div>
            <label asp-for="Name"></label>
            <input asp-for="Name" required="">
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        <div>
            <label asp-for="Price"></label>
            <input asp-for="Price" required="">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Duration"></label>
            <input asp-for="Duration" required="">
            <span asp-validation-for="Duration"></span>
        </div>
        <div>
            <label asp-for="CreationDate"></label>
            <input asp-for="CreationDate" >
            <span asp-validation-for="CreationDate"></span>
        </div>
        <div>
            <label asp-for="StartDate"></label>
            <input asp-for="StartDate" required="">
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Image"></label>
            <input asp-for="Image" required="">
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div>
            <select asp-for="CategoryId" asp-items="categoriesItem"></select>
        </div>
        <input type="submit" value="Save">
        <a asp-action="GetAllProduct" asp-controller="Product">Back to list</a>
    </div>

</form>
<style>
    /* Style for input fields */
    input[type=text], input[type=number], input[type=datetime-local], input[type=file], input[type=date], select {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }


    /* Style for the submit button */
    input[type=submit] {
        background-color: #4CAF50;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    /* Style for the "Back to list" link */
    a {
        color: #4CAF50;
        text-decoration: none;
    }

    /* Style for the form container */
    .form-container {
        width: 50%;
        margin: auto;
    }

    /* Style for the hover effect */
    input[type=text]:hover, input[type=number]:hover, input[type=datetime-local], input[type=file]:hover, select:hover {
        background-color: #f2f2f2;
    }

    /* Style for the animation */
    input[type=text], input[type=number], input[type=datetime-local], input[type=file], select {
        transition: 0.5s;
    }

        /* Style for the animation on focus */
        input[type=text]:focus, input[type=number]:focus, input[type=datetime-local], input[type=file]:focus, select:focus {
            background-color: #ddd;
            outline: none;
        }
</style>
