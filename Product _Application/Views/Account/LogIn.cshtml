@using Product__Application.ViewModel;

@{
    ViewData["Title"] = "LogIn";
}

<h1>LogIn</h1>
@model LoginViewModel
<form asp-action="SaveLogin" asp-controller="Account" method="post">
    <div class="form-container">
        <div>
            <label asp-for="UserName"></label>
            <input asp-for="UserName" required="">
            <span asp-validation-for="UserName" class="text-danger"></span>

        </div>
        <div>
            <label asp-for="Password" ></label>
            <input asp-for="Password" required="" Type="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <input type="submit" value="LogIn">
    </div>


</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<style>
    /* Style for input fields */
    input[type=text], input[type=Password], input[type=number], input[type=datetime-local], input[type=file], input[type=date], select {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }


    /* Style for the submit button */
    input[type=submit] {
        background-color: #4CAF50;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    /* Style for the "Back to list" link */
    a {
        color: #4CAF50;
        text-decoration: none;
    }

    /* Style for the form container */
    .form-container {
        width: 50%;
        margin: auto;
    }

    /* Style for the hover effect */
    input[type=text]:hover, input[type=Password], input[type=number]:hover, input[type=datetime-local], input[type=file]:hover, select:hover {
        background-color: #f2f2f2;
    }

    /* Style for the animation */
    input[type=text], input[type=Password], input[type=number], input[type=datetime-local], input[type=file], select {
        transition: 0.5s;
    }

        /* Style for the animation on focus */
        input[type=text]:focus, input[type=number]:focus, input[type=datetime-local], input[type=file]:focus, select:focus {
            background-color: #ddd;
            outline: none;
        }
</style>